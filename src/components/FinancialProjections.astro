---
import data from "@data/financialProjections.json";
---

<section class="fp">
  <div class="fp__inner">
    <header class="fp__head">
      <div class="fp__titles">
        <h2>{data.title}</h2>
        <p>{data.subtitle}</p>
      </div>

      <div class="fp__actions">
        <button class="nav nav--prev" aria-label="Previous">
          <svg viewBox="0 0 24 24" width="18" height="18"><path d="M15 6l-6 6 6 6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </button>
        <button class="nav nav--next" aria-label="Next">
          <svg viewBox="0 0 24 24" width="18" height="18"><path d="M9 6l6 6-6 6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </button>
      </div>
    </header>

    <ul class="fp__grid">
      {data.values.map((item, i) => (
        <li class={`card ${i === 1 ? "card--active" : ""}`}>
          <div class="icon">
            {item.icon === "cal" && (
              <svg viewBox="0 0 24 24"><path d="M7 2v3M17 2v3M3 9h18M4 5h16a1 1 0 0 1 1 1v15H3V6a1 1 0 0 1 1-1z" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
            )}
            {item.icon === "card" && (
              <svg viewBox="0 0 24 24"><rect x="3" y="5" width="18" height="14" rx="2" ry="2" fill="currentColor"/><rect x="3" y="8" width="18" height="3" fill="#111" opacity=".6"/></svg>
            )}
            {item.icon === "law" && (
              <svg viewBox="0 0 24 24"><path d="M12 4l9 4H3l9-4zM5 10v8m4-8v8m6-8v8m4-8v8M2 20h20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
            )}
            {item.icon === "money" && (
              <svg viewBox="0 0 24 24"><path d="M12 2v20M16.5 7a3.5 3.5 0 0 0-3.5-3.5H9a3 3 0 0 0 0 6h6a3 3 0 1 1 0 6H9a3.5 3.5 0 0 1-3.5-3.5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
            )}
          </div>

          <h3>{item.title}</h3>
          <p>{item.description}</p>

          {item.link?.url && (
            <a class="more" href={item.link.url}>{item.link.text}</a>
          )}
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .fp{ background:#f6f6f6; }
  .fp__inner{ max-width:1200px; margin:0 auto; padding:64px 24px 80px; }
  .fp__head{ display:grid; grid-template-columns:1fr auto; gap:24px; align-items:end; margin-bottom:28px; }
  .fp__titles h2{ margin:0 0 8px; font-size:32px; color:#111; }
  .fp__titles p{ margin:0; color:#6b7280; max-width:700px; }
  .fp__actions{ display:flex; gap:14px; }
  .nav{ width:48px; height:48px; border-radius:999px; border:none; display:grid; place-items:center; cursor:pointer; background:#111; color:#fff; }
  .nav--next{ background:#f5c84b; color:#111; }

  .fp__grid{ list-style:none; margin:0; padding:0; display:grid; gap:22px; grid-template-columns:repeat(4,minmax(0,1fr)); }
  @media (max-width:1024px){ .fp__grid{ grid-template-columns:repeat(2,1fr);} }
  @media (max-width:640px){ .fp__grid{ grid-template-columns:1fr;} }

  .card{ background:#fff; border:1px solid #e7e7e7; border-radius:16px; padding:22px; box-shadow:0 8px 24px rgba(0,0,0,.06); display:flex; flex-direction:column; gap:10px; transition:all .15s; }
  .card:hover{ transform:translateY(-2px); box-shadow:0 12px 28px rgba(0,0,0,.12); }

  .icon{ width:40px; height:40px; border-radius:12px; background:#f2f2f2; display:grid; place-items:center; color:#111; }
  .icon svg{ width:22px; height:22px; }

  .card h3{ margin:6px 0 4px; font-size:18px; }
  .card p{ margin:0; color:#616b74; font-size:14px; line-height:1.55; }
  .more{ margin-top:auto; font-size:13px; text-decoration:none; color:#111; background:#fafafa; padding:8px 12px; border-radius:999px; border:1px solid #e5e5e5; }
  .card--active{ background:#1f1f1f; color:#fff; border-color:#2a2a2a; }
  .card--active .icon{ background:#f5c84b; color:#111; }
  .card--active p{ color:#d6d6d6; }
  .card--active .more{ background:#111; color:#fff; border-color:#000; }
</style>
