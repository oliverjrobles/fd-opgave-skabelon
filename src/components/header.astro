---
const navLinks = [
  { name: "Home", href: "/" },
  { name: "Case Study", href: "/case-study" },
  { name: "Team", href: "/team" },
  { name: "About", href: "/about" },
];
---

<header>
  <div class="container">
    <!-- Logo -->
    <a href="/" class="logo">AskExperts</a>

    <!-- Navigation -->
    <nav>
      <ul>
        {navLinks.map(link => (
          <li><a href={link.href}>{link.name}</a></li>
        ))}
      </ul>
    </nav>

    <!-- Login Button -->
    <a href="/login" class="login-btn">Login</a>
  </div>
</header>

<style>
  /* HEADER WRAPPER */
  header {
    background-color: #2b2b2b; /* MÃ¸rk baggrund */
    color: #fff;
    width: 100%;
  }

  /* CONTAINER */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* LOGO */
  .logo {
    font-size: 1.25rem;
    font-weight: 600;
    text-decoration: none;
    color: #ffffff;
  }

  /* NAVIGATION */
  nav ul {
    list-style: none;
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  nav a {
    color: #ffffff;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease-in-out;
  }

  nav a:hover {
    color: #f4c542; /* Gul hoverfarve */
  }

  /* LOGIN BUTTON */
  .login-btn {
    background-color: #f4c542;
    color: #000;
    padding: 0.5rem 1.25rem;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: background-color 0.2s ease-in-out;
  }

  .login-btn:hover {
    background-color: #ffda63;
  }

  /* BASIC RESPONSIVE */
  @media (max-width: 768px) {
    .container {
      flex-wrap: wrap;
      gap: 1rem;
    }

    nav ul {
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>
