---
// @ts-nocheck
import servicesData from "@data/services.json";
---

<section class="services">
  <div class="wrap">
    <ul class="grid">
      {
        servicesData.services.map((service) => (
          <li class="card">
            <h2 class="title">{service.title}</h2>
            <p class="desc">{service.description}</p>
            <a class="cta" href={service.href || "#"}>
              {service.buttonText}
              <svg width="16" height="16" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M13 5l7 7-7 7M5 12h14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  :root{
  --card-from:#3b3b3b;
  --card-to:#2f2f2f;
  --card-br:#ffffff22;
  --text:#fff;
  --muted:#d5d5d5;
  --btn-bg:#161616;
  --btn-bg-hover:#1f1f1f;
}

/* 1) Same width as hero */
.services{
  position: relative;
  z-index: 2;              
  margin-top: -28px;       
  overflow: hidden;
}
.wrap{
  
  max-width: 1180px;       /* match hero max-width */
  margin-inline: auto;
  padding-inline: 24px;    /* samme side-padding som hero */
  overflow: hidden;
}

/* 3/2/1 kolonner */
.grid{
    list-style: none;
  margin: 0;
  padding: 0;
  display: grid;
  gap: 16px;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  box-sizing: border-box;
}
@media (max-width:1024px){ .grid{ grid-template-columns:repeat(2,1fr);} }
@media (max-width:640px){ .grid{ grid-template-columns:1fr;} }


.card{
  color:var(--text);
  background:linear-gradient(180deg, var(--card-from), var(--card-to));
  border:1px solid var(--card-br);
  border-radius:16px;
  padding:20px 22px 18px;
  min-height:172px;
  display:flex; flex-direction:column; gap:12px;
  box-shadow: 0 1px 0 rgba(255,255,255,.05) inset, 0 8px 24px rgba(0,0,0,.25);
  transition: transform .15s ease, box-shadow .15s ease, border-color .15s ease;
}
.card:hover{
  transform: translateY(-2px);
  border-color:#ffffff33;
  box-shadow: 0 12px 32px rgba(0,0,0,.32);
}


.title{ margin:2px 0 0; font-weight:700; font-size:18px; line-height:1.2; }
.desc{
  margin:0; color:var(--muted); font-size:13.5px; line-height:1.55;
  white-space: normal; overflow: visible; text-overflow: initial; /* 3) fjerner ... */
}


.cta{
  margin-top:auto; align-self:flex-start;
  display:inline-flex; align-items:center; gap:8px;
  padding:10px 16px; border-radius:999px;
  background:var(--btn-bg); color:#fff; text-decoration:none;
  border:1px solid #00000055; font-weight:600; font-size:13px;
  box-shadow: 0 2px 0 rgba(255,255,255,.06) inset;
  transition: background-color .15s ease, transform .03s ease;
}
.cta:hover{ background:var(--btn-bg-hover); }
.cta:active{ transform: translateY(1px); }
</style>